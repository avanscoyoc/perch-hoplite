{
  "name": "Perch Hoplite",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/workspace/.venv/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "workspaceFolder": "/workspace",
  "postCreateCommand": "mkdir -p /workspace/gcs-bucket && gcsfuse --only-dir soundhub/mojave_data dse-staff /workspace/gcs-bucket",
  "mounts": [
    "source=${env:HOME}/.config/gcloud,target=/root/.config/gcloud,type=bind"
  ],
  "runArgs": [
    "--cap-add=SYS_ADMIN",
    "--device=/dev/fuse",
    "--security-opt",
    "apparmor:unconfined"
  ]
}