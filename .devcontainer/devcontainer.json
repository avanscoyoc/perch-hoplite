{
  "name": "Perch Hoplite",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/workspace/.venv/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "workspaceFolder": "/workspace",
  "postCreateCommand": "mkdir -p /workspace/gcs-bucket && gsutil -m cp -r gs://dse-staff/soundhub/mojave_data /workspace/gcs-bucket",
  "mounts": [
    "source=${env:HOME}/.config/gcloud,target=/root/.config/gcloud,type=bind"
  ]
}
